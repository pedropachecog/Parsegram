    <style name="Theme.Parsegram" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ig_1_royal_blue</item>
        <item name="colorPrimaryVariant">@color/ig_2_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ig_10_light_yellow</item>
        <item name="colorSecondaryVariant">@color/ig_9_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ig_royal_blue_dark</item>
        <!-- Customize your theme here. -->



    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/billabong</item>
